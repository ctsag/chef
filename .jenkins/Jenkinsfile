pipeline {

  agent any

  environment {
    cookbookDir = 'cookbooks/nothingness'
    branchType = env.GIT_BRANCH.substring(0, 2)
  }

  stages {

    stage('Lint Tests') {
      when {
        not {
          branch 'master'
        }
      }
      parallel {
        stage('CookStyle') {
          steps {
            sh 'cookstyle -DES ${cookbookDir}'
          }
        }
        stage('Foodcritic') {
          steps {
            sh 'foodcritic ${cookbookDir}'
          }
        }
      }
    }

    stage('Unit Tests') {
      when {
        not {
          branch 'master'
        }
      }
      steps {
        dir(cookbookDir) {
          sh 'chef exec rspec -f d spec/unit/recipes/*'
        }
      }
    }

    stage('Integration Tests') {
      when {
        allOf {
          environment name: 'branchType', value: 'PR';
          environment name: 'CHANGE_TARGET', value: 'master'
        }
      }
      steps {
        dir(cookbookDir) {
          sh 'kitchen verify dev'
        }
      }
    }

    stage('Upload cookbook') {
      when {
        branch 'master'
      }
      steps {
        sh 'knife cookbook upload nothingness'
      }
    }

    stage('Deploy Admin and Dev') {
      when {
        branch 'master'
      }
      parallel {
        stage('Dev') {
          steps {
            sh 'knife ssh "role:dev" "chef-client" --ssh-user root'
          }
        }
        stage('Admin') {
          steps {
            sh 'knife ssh "role:admin" "chef-client" --ssh-user root'
          }
        }
      }
    }

  }

  post {
    always {
      dir(cookbookDir) {
        sh 'kitchen destroy'
      }
    }
  }

}
