pipeline {
    agent any

    stages {
        stage('Lint Tests') {
            parallel {
                stage('cookstyle') {
                    steps {
                        sh 'cookstyle cookbooks/nothingness/'
                    }
                }
                stage('foodcritic') {
                    steps {
                        sh 'foodcritic cookbooks/nothingness/'
                    }
                }
            }
        }
        stage('Unit Tests') {
            stage('rspec') {
                steps {
                    sh 'chef exec rspec -f d cookbook/nothingness/spec/unit/recipes/*'
                }
            }
        }
    }
}
