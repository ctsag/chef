pipeline {
    agent any

    stages {
        stage('Lint Tests') {
            parallel {
                stage('cookstyle') {
                    steps {
                        sh 'cookstyle cookbooks/nothingness/'
                    }
                }
                stage('foodcritic') {
                    steps {
                        sh 'foodcritic cookbooks/nothingness/'
                    }
                }
            }
        }
        stage('Unit Tests') {
            parallel {
                stage('rspec') {
                    steps {
                        sh 'cd cookbooks/nothingness ; chef exec rspec -f d spec/unit/recipes/*'
                    }
                }
            }
        }
    }
}
