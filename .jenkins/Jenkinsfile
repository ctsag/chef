pipeline {
    agent any

    stages {
        stage('Lint Tests') {
            steps {
                dir('cookbook/nothingness') {
                    sh 'cookstyle .'
                    sh 'foodcritic .'
                }
            }
        }
        stage('Unit Tests') {
            steps {
                echo 'chef exec rspec -f d spec/unit/recipes/*'
            }
        }
    }
}
