pipeline {

  agent any

  environment {
    cookbookDir = 'cookbooks/nothingness'
  }

  stages {
    stage('Lint Tests') {
      parallel {
        stage('CookStyle') {
          steps {
            sh 'cookstyle -DES ${cookbookDir}'
          }
        }
        stage('Foodcritic') {
          steps {
            sh 'foodcritic ${cookbookDir}'
          }
        }
      }
    }
    stage('Unit Tests') {
      parallel {
        stage('RSpec') {
          steps {
            dir(cookbookDir) {
              sh 'chef exec rspec -f d spec/unit/recipes/*'
            }
          }
        }
      }
    }
    stage('Integration Tests') {
      when {
        environment name: 'GITHUB_PR_TARGET_BRANCH', value: 'master'
      }
      parallel {
        stage('Kitchen CI') {
          steps {
            dir(cookbookDir) {
              sh 'kitchen verify dev'
            }
          }
        }
      }
    }
  }

  post {
    always {
      dir(cookbookDir) {
        sh 'kitchen destroy'
      }
    }
  }

}
